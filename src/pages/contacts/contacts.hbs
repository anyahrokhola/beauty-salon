<!DOCTYPE html>
<html lang="en">

{{> "../../components/head/head" title="Be Beuaty"}}
<body>

    {{> "../../components/header/header" }}

    <section class="contact">
        <div class="contact-wrapper">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-12 col-xl-6 order-2 order-lg-1">
                        <div class="map-wrapper">
                            <iframe
                            src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2615.6005218530854!2d24.35505431556181!3d49.037204379305514!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x4730a3be365c4f07%3A0xd786db9637d168e8!2z0JzQsNCz0L3RltGC!5e0!3m2!1suk!2sua!4v1638304945858!5m2!1suk!2sua"
                            id="map" allowfullscreen="" loading="lazy">
                            </iframe>
                        </div>
                    </div>

                    <div class="col-12 col-xl-6 order-1 order-lg-2">
                        <div class="form-wrapper">
                            <h1>Get in touch</h1>
                            <!-- Contact form -->
                            <form>
                                <div class="row">
                                    <div class="col-6">
                                        <input type="name" name="name" placeholder="Name">
                                    </div>

                                    <div class="col-6">
                                        <input type="name" name="name" placeholder="Surname">
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-12">
                                        <input type="text" name="text" placeholder="Services">
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-12">
                                        <div class="messages">
                                            <textarea name="message" placeholder="Note"></textarea>
                                        </div>
                                    </div>
                                </div>
                                <div class="button-block">
                                    <a class="btn btn-main btn-primary"> <span>Booking</span> </a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    
    {{> "../../components/schedule/schedule" }} 
    {{> "../../components/social/social" }}
    {{> "../../components/footer/footer" }}
</body>


</html>